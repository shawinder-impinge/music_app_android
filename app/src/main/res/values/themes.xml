<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textview" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>






    <style name="_transparent_edit_box_style" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/semi_transparent_white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">40</item>
    </style>



    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>



    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/app_color</item>
       <!-- <item name="android:colorControlActivated">#c51162</item>-->
    </style>







    <style name="custom_alert_dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/app_color</item>
        <item name="android:textAllCaps">false</item>
    </style>


























    <!--todo for sweet alert-->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:colorPrimary">@color/app_color</item>
        <item name="android:colorPrimaryDark">@color/blue_color</item>
    </style>

    <style name="dialog_red_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/red_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/app_color</item>
    </style>

    <style name="title_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>

    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor" format="color" />
        <attr name="dotsSize" format="dimension" />
        <attr name="dotsWidthFactor" format="float" />
    </declare-styleable>

</resources>