<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.WelcomeScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/welcome_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin400"
                    android:scaleType="centerCrop"
                    android:src="@drawable/welcome_bg" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/welcome_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:fontFamily="@font/anydore"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:text="Welcome to Soul"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/margin_50"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/welcome_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/welcome_title"
                        android:layout_marginTop="@dimen/margin_10"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="Before you explore the app. We have a\nquestion list to personalize you"
                        android:textColor="@color/app_textcolor"
                        android:textSize="@dimen/normal_text" />

                    <TextView
                        android:id="@+id/lets_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/welcome_description"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_30"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:background="@drawable/cornor_bg"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="@dimen/margin_15"
                        android:text="LET'S GET STARTED!"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_text" />

                    <TextView
                        android:id="@+id/skip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lets_start"
                        android:layout_marginTop="@dimen/margin35"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:text="@string/skip"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/large_text" />


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>