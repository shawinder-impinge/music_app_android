<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fp_description"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin100"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/cornor"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10">


        <ImageView
            android:id="@+id/iv_old_pass"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerVertical="true"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/et_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_toEndOf="@+id/iv_old_pass"
            android:background="@null"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins_regular"
            android:hint="Old Password"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/cornor"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10">


        <ImageView
            android:id="@+id/iv_new_password"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerVertical="true"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_toEndOf="@+id/iv_new_password"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="New password"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:padding="@dimen/margin_5"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


    </RelativeLayout>







    <RelativeLayout
        android:id="@+id/fp_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fp_description"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/cornor"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10">


        <ImageView
            android:id="@+id/iv_cp"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerVertical="true"
            android:src="@drawable/mail" />

        <EditText
            android:id="@+id/et_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_toEndOf="@+id/iv_cp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="Confirm new password"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:text=""
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


    </RelativeLayout>

    <TextView
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fp_lay"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/cornor_bg"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:padding="@dimen/margin_15"
        android:text="SEND"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text" />


</LinearLayout>