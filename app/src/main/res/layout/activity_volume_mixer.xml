<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VolumeMixerActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/gray_light"
        android:gravity="center"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/volume_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="Volume Master"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/normal_text" />

        <ImageView
            android:id="@+id/volume_master_audio"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_5"
            android:src="@drawable/vol"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/volume_master"
            android:layout_marginTop="@dimen/margin_15"
            android:maxHeight="@dimen/margin_10"
            android:progressDrawable="@drawable/sb_progress_drawable"
            android:splitTrack="false"
            android:thumb="@drawable/custom_thumb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@color/gray_light"
        android:gravity="center"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="Music"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/normal_text" />

        <ImageView
            android:id="@+id/music_audio"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_5"
            android:src="@drawable/vol"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music"
            android:layout_marginTop="@dimen/margin_15"
            android:maxHeight="@dimen/margin_10"
            android:progressDrawable="@drawable/sb_progress_drawable"
            android:splitTrack="false"
            android:thumb="@drawable/custom_thumb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@color/gray_light"
        android:gravity="center"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/nature_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="Nature Effect"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/normal_text" />

        <ImageView
            android:id="@+id/vnature_effect_audio"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_5"
            android:src="@drawable/vol"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nature_effect"
            android:layout_marginTop="@dimen/margin_15"
            android:maxHeight="@dimen/margin_10"
            android:progress="50"
            android:progressDrawable="@drawable/sb_progress_drawable"
            android:splitTrack="false"
            android:thumb="@drawable/custom_thumb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@color/gray_light"
        android:gravity="center"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/binaural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="Binaural Effect"
            android:textColor="@color/app_textcolor"
            android:textSize="@dimen/normal_text" />

        <ImageView
            android:id="@+id/binaural_audio"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/margin_5"
            android:src="@drawable/vol"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/MySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/binaural"
            android:layout_marginTop="@dimen/margin_15"
            android:maxHeight="@dimen/margin_10"
            android:progress="50"
            android:progressDrawable="@drawable/sb_progress_drawable"
            android:splitTrack="false"
            android:thumb="@drawable/custom_thumb" />

    </RelativeLayout>

</LinearLayout>